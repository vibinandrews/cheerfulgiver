<script>
    const quizData = [
        {
            q: "When the offering basket approaches your row, what is your first thought?",
            o: [
                {t: "Gratitude: 'I can't wait to return this to God!'", s: 3},
                {t: "Duty: 'It's that time of the service again.'", s: 2},
                {t: "Hesitation: 'I hope I have a small bill left.'", s: 1}
            ]
        },
        {
            q: "According to 2 Corinthians 9:7, God loves a giver who gives...",
            o: [
                {t: "Under compulsion", s: 1},
